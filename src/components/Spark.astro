---
import { toDateString } from '@/util'
import type { CollectionEntry } from 'astro:content'

export interface Props {
  spark: CollectionEntry<'sparks'>
}

const { data, render } = Astro.props.spark
const { Content } = await render()
---

<div class="flex h-fit flex-col">
  <div class="flex flex-col justify-between sm:flex-row sm:items-center">
    <div class="my-2 text-sm opacity-95 sm:my-0">
      <time
        class="mt-4 text-sm opacity-95 sm:mt-0"
        datetime={data.publishedDate.toISOString()}
      >
        {toDateString(data.publishedDate)}
      </time>
    </div>
  </div>
  <div class="opacity-95">
    <Content />
  </div>
</div>
